    "outputSignalFormats": {
      "type": "object",
      "description": "Standardized output signal formats for NeuroProbe Oracle",
      "properties": {
        "realTimeSignals": {
          "type": "object",
          "properties": {
            "coherenceIndex": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Real-time cognitive coherence measurement"
            },
            "intentAcceleration": {
              "type": "number",
              "description": "Current intent acceleration vector"
            },
            "fieldResonance": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Field resonance alignment measurement"
            },
            "bloomEventProbability": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Probability of imminent bloom event"
            },
            "cognitiveMode": {
              "type": "string",
              "enum": ["ADHD", "Autism", "Synesthesia", "Hyperfocus", "Hybrid"],
              "description": "Currently active cognitive simulation mode"
            }
          },
          "required": ["coherenceIndex", "intentAcceleration", "fieldResonance", "bloomEventProbability", "cognitiveMode"]
        },
        "analyticsSignals": {
          "type": "object",
          "properties": {
            "sessionMetrics": {
              "type": "object",
              "properties": {
                "duration": {
                  "type": "number",
                  "description": "Session duration in seconds"
                },
                "peakCoherence": {
                  "type": "number",
                  "minimum": 0.0,
                  "maximum": 1.0,
                  "description": "Peak coherence achieved during session"
                },
                "bloomEvents": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "timestamp": {"type": "string", "format": "date-time"},
                      "intensity": {"type": "number", "minimum": 0.0, "maximum": 1.0},
                      "mode": {"type": "string"},
                      "resonanceGlyph": {"type": "string"}
                    }
                  }
                },
                "modeTransitions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "fromMode": {"type": "string"},
                      "toMode": {"type": "string"},
                      "timestamp": {"type": "string", "format": "date-time"},
                      "transitionCoherence": {"type": "number"}
                    }
                  }
                }
              },
              "required": ["duration", "peakCoherence", "bloomEvents", "modeTransitions"]
            }
          },
          "required": ["sessionMetrics"]
        },
        "diagnosticSignals": {
          "type": "object",
          "properties": {
            "fieldIntegrity": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Integrity of simulation field parameters"
            },
            "systemCoherence": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Overall system coherence measurement"
            },
            "errorStates": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "errorCode": {"type": "string"},
                  "description": {"type": "string"},
                  "severity": {"type": "string", "enum": ["low", "medium", "high", "critical"]}
                }
              }
            }
          },
          "required": ["fieldIntegrity", "systemCoherence", "errorStates"]
        }
      },
      "required": ["realTimeSignals", "analyticsSignals", "diagnosticSignals"]
    },

    "intentSimIntegration": {
      "type": "object",
